<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN 2.0//EN" "http://www.springframework.org/dtd/spring-beans-2.0.dtd">

<beans>

    <bean id="triangle" class="com.github.aman.Triangle">
        <property name="p1" ref="point1"/>
        <property name="p2" ref="point2"/>
        <property name="p3" ref="point3"/>
    </bean>

    <bean id="point1" class="com.github.aman.Point">
        <property name="x" value="0"/>
        <property name="y" value="0"/>
    </bean>

    <bean id="point2" class="com.github.aman.Point">
        <property name="x" value="0"/>
        <property name="y" value="20"/>
    </bean>

    <bean id="point3" class="com.github.aman.Point">
        <property name="x" value="-20"/>
        <property name="y" value="0"/>
    </bean>

</beans>